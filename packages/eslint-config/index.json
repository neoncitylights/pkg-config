{
	"env": {
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended",
		"plugin:n/recommended",
		"plugin:promise/recommended",
		"plugin:security/recommended-legacy"
	],
	"plugins": [
		"security",
		"simple-import-sort"
	],
	"rules": {
		"simple-import-sort/imports": "error",
		"simple-import-sort/exports": "error",
		"security/detect-object-injection": "off"
	}
}
