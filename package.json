{
	"name": "lint-config-neoncitylights",
	"private": true,
	"version": "0.0.0",
	"description": "Personal lint configuration settings used by Neoncitylights",
	"license": "MIT",
	"type": "module",
	"author": {
		"name": "Samantha",
		"url": "https://github.com/neoncitylights"
	},
	"keywords": [
		"typescript"
	],
	"bugs": "https://github.com/neoncitylights/lint-config/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neoncitylights/lint-config.git"
	},
	"funding": {
		"type": "individual",
		"url": "https://github.com/sponsors/neoncitylights"
	},
	"workspaces": [
		"packages/**"
	],
	"scripts": {
		"lint": "npm run lint:md && npm run lint:style && npm run lint:es",
		"lint:fix": "npm run lint:md-fix && npm run lint:style-fix && npm run lint:es-fix",
		"lint:md": "markdownlint-cli2 \"*.md\" \"packages/**/*.md\" \"#node_modules\"",
		"lint:md-fix": "npm run lint:md -- --fix",
		"lint:style": "stylelint \"packages/**/*.css\" --allow-empty-input",
		"lint:style-fix": "npm run lint:style -- --fix",
		"lint:es": "eslint packages --ext .js",
		"lint:es-fix": "npm run lint:es -- --fix"
	},
	"devDependencies": {
		"eslint-config-neoncitylights": "link:packages/eslint-config",
		"eslint": "^8.49.0",
		"markdownlint-cli2": "^0.9.2",
		"markdownlint-config-neoncitylights": "link:packages/markdownlint-config",
		"stylelint-config-neoncitylights": "lint:packages/stylelint-config",
		"stylelint": "^15.10.3"
	}
}
